{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build:fe",
  "outputDirectory": "frontend/dist",
  "builds": [
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/src/index.ts" }
  ]
}
