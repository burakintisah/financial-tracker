{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build --workspace=frontend",
  "outputDirectory": "frontend/dist",
  "functions": {
    "backend/src/index.ts": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/src/index.ts" }
  ]
}
