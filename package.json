{
  "name": "financial-tracker",
  "version": "1.0.1",
  "description": "Personal finance tracking application with Excel import support",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:fe": "npm run dev --workspace=frontend",
    "dev:be": "npm run dev --workspace=backend",
    "dev": "concurrently \"npm run dev:fe\" \"npm run dev:be\"",
    "build:fe": "npm run build --workspace=frontend",
    "build:be": "npm run build --workspace=backend",
    "build": "npm run build:fe && npm run build:be",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
