# Server Configuration
PORT=3001
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:5173

# Demo Mode (auto-enabled if ANTHROPIC_API_KEY is not set)
# Set to 'true' to force demo mode even with API key
DEMO_MODE=false

# Database (Supabase) - Optional in demo mode
# Get these from: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Claude AI (Anthropic) - Optional in demo mode
# Get this from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-...
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=2000

# Cache Configuration
CACHE_TTL_HOURS=24

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=10
